{
    "name": "stuffchat-desktop",
    "version": "1.0.2",
    "description": "Desktop client for stuffchat",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "build:linux": "electron-builder --linux",
        "build:mac": "electron-builder --mac",
        "build:win": "electron-builder --win"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "electron": "^40.1.0",
        "electron-builder": "^26.7.0"
    },
    "build": {
        "appId": "org.stuffcity.chat",
        "productName": "stuffchat",
        "icon": "icon.png",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "preload.js",
            "icon.png"
        ],
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Network",
            "icon": "icon.png"
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.social-networking",
            "icon": "icon.png"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "icon": "icon.png"
        }
    }
}