{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend: cargo run",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-lc", "cargo run"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Frontend: python http.server 3001",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bash",
      "runtimeArgs": ["-lc", "python3 -m http.server 3001"],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ],
  "compounds": [
    {
      "name": "Run both: backend + frontend",
      "configurations": [
        "Backend: cargo run",
        "Frontend: python http.server 3001"
      ],
      "stopAll": true
    }
  ]
}