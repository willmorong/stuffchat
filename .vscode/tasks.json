{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Rust (cargo run)",
      "type": "shell",
      "command": "cargo run",
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Serve frontend (python http.server 3001)",
      "type": "shell",
      "command": "python3 -m http.server 3001",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run backend + Serve frontend (parallel)",
      "dependsOn": [
        "Run Rust (cargo run)",
        "Serve frontend (python http.server 3001)"
      ],
      "dependsOrder": "parallel",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}